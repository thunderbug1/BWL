% Metadaten fürs Dokument neu schreiben:
\newcommand{\writeMetadatenPDF}
{
	\hypersetup
	{
		pdfauthor={\@author},		% Autor der Arbeit
		pdfsubject={\@title},		% Titel der Arbeit
	}
}
%%----------------------------------------------------------------------
% Link-Farbe setzen
\newcommand{\setLinkColor}
{
	\ifthenelse{\equal{\@colLin}{No}}%
	{%
		\hypersetup{colorlinks=false}%
	}%
	% else
	{%
		\hypersetup{colorlinks=true}%
	}%
}
