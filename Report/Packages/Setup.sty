%% Definition des Styles für die "FHWels"-Listings:
\lstdefinestyle{FHWelsStyle}{
	basicstyle=\scriptsize{},
	backgroundcolor=\color{white},			% Hintergrundfarbe
	frame=single, rulecolor=\color{black},	% Rahmenstyle und Farbe	
	captionpos=t,							% Listingüberschrift
	numbers=left, numberstyle=\tiny,		% Zeilennummerierung
	tabsize=3,								% Anzahl der Zeichen für Tabulator
	showtabs=false,							% legt fest, ob die Tabs angezeigt werden
	showspaces=false,						% legt fest, ob die Leerzeichen angezeigt werden
	showstringspaces=false,					% Leerzeichen im String werden nicht markiert 
	upquote=true,							% legt den Style der Anführungszeichen "'` fest
	aboveskip={0.5\baselineskip},			% legt den Abstand vor der Listing fest
	belowskip={0.5\baselineskip},			% legt den Abstand nach der Listing fest
	columns=fixed,							% jedes Zeichen benötigt den selben Platz
	extendedchars=true,						% Umlaute können verwendet werden
	breaklines=true,						% automatischer Zeilenumbruch
	prebreak = \raisebox{0ex}[0ex][0ex]{\ensuremath{\hookleftarrow}},
	breakautoindent = true,						% umbrochene Zeile einrücken
	identifierstyle=\ttfamily,					% Format von der "main"-Funktion
	keywordstyle=\color[rgb]{0,0,1},			% Format von "void, while, char,..."
	commentstyle=\color[rgb]{0,0.7,0},			% Format von Kommentaren
	stringstyle=\color[rgb]{1,0.44,0},			% Format von Strings
	directivestyle=\color[rgb]{0.9,0,0}			% Format von "#define"
}
